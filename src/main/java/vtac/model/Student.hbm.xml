<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="vtac.model.Student" table="STUDENT">
		<id name="id" column="ID" type="java.lang.Integer" length="10">
				<generator class="increment">
				</generator>
		</id>
		<property name="firstName" column="FIRSTNAME" type="java.lang.String"
			length="50" not-null="true" />
		<property name="lastName" column="LASTNAME" type="java.lang.String"
			length="50" not-null="true" />
		<property name="age" column="AGE" type="java.lang.Integer"
		length="10" not-null="false" />
		<property name="gpa" column="GPA" type="java.lang.Double"
		not-null="false" />
		<property name="classId" column="CLASSID" type="java.lang.Integer" length="10" not-null="true" />
 
	</class>
</hibernate-mapping>
