<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="vtac.model.Class" table="CLASS"> 
		<id name="id" column="ID" type="java.lang.Integer" length="10">
				<generator class="increment">
				</generator>
		</id> 
		<property name="name" column="NAME" type="java.lang.String"
			length="50" not-null="true" />
		<property name="location" column="LOCATION" type="java.lang.String"
			length="100" not-null="true" />
		<property name="teacher" column="TEACHER" type="java.lang.String"
		length="50" not-null="true" />

	</class>
</hibernate-mapping>
